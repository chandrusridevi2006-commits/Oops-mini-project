package housekeeping_project;

class Room {
    private int roomNumber;
    private boolean isClean;

    public Room(int roomNumber) {
        this.roomNumber = roomNumber;
        this.isClean = false;
    }

    public void cleanRoom() {
        isClean = true;
        System.out.println("Room " + roomNumber + " cleaned.");
    }

    public void showStatus() {
        System.out.println("Room " + roomNumber + " status: " + (isClean ? "Clean" : "Dirty"));
    }
}

class Housekeeper {
    private String name;

    public Housekeeper(String name) {
        this.name = name;
    }

    public void assignRoom(Room r) {
        System.out.println(name + " assigned to clean Room " + r);
    }
}

public class module1 {
    public static void main(String[] args) {
        Room r1 = new Room(101);
        r1.showStatus();
        r1.cleanRoom();
        r1.showStatus();
    }
}
